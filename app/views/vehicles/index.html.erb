<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h1 class="d-flex justify-content-center">Vehicles</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Vehicle name</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td class="align-middle"><%= vehicle.vehicle_name %></td>
          <!--<td><%= link_to 'Show', vehicle %></td>
          <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
          <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          <td class="align-middle"><%= link_to edit_vehicle_path(vehicle), class: 'btn btn-light btn-sm rounded-circle' do %> 
            <i class="material-icons">edit</i> <% end %></td>
          <td class="align-middle"><%= link_to vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm rounded-circle' do %>
            <i class="material-icons">delete</i> <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Vehicle', new_vehicle_path, class: 'btn btn-dark float-right', style: 'color:white' %>
</div>